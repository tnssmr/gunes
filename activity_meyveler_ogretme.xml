<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_renk_ogretme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cengiz.cengo.MeyvelerOgretme">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/next"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/imageButtonDevam"
        android:onClick="sonraki_sayfa"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/seftali"
        android:background="@null"
        android:id="@+id/resim_meyve"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Åžeftali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_meyve"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/resim_meyve"
        android:layout_marginBottom="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:fontFamily="casual"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_orange_dark" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/prev"
        android:scaleType="fitCenter"
        android:background="@null"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imageButtonDevam"
        android:layout_alignLeft="@+id/resim_meyve"
        android:layout_alignStart="@+id/resim_meyve"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/imageButtonGeri"
        android:onClick="onceki_sayfa"/>


</RelativeLayout>
