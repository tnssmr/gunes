<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meyve_tamami"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tansu.gunes.MeyveTamami">


    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/seftali"
            android:id="@+id/seftali"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/armut"
            android:id="@+id/armut"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/elma"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/elma" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/firstLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Şeftali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_seftali"
            android:layout_weight="1" />

        <TextView
            android:text="Armut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_armut"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Elma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/text_elma"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/erik"
            android:id="@+id/erik"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/karpuz"
            android:id="@+id/karpuz"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/kayisi"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/kayisi" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/thirdLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Erik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_erik"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:text="Karpuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_karpuz"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Kayısı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_kayisi"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fifthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/muz"
            android:id="@+id/muz"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/nar"
            android:id="@+id/nar"
            android:onClick="oku"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/portakal"
            android:layout_weight="1"
            android:onClick="oku"
            android:id="@+id/portakal" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/sixthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@+id/fifthLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Muz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text_muz"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <TextView
            android:text="Nar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nar"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="Portakal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_portakal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventhLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sixthLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/cilek"
            android:id="@+id/cilek"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:onClick="oku"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eighthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seventhLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:text="Çilek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_cilek"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</RelativeLayout>